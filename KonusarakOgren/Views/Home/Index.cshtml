<script type="text/javascript">
    $(function () {
        $("#ddlExamTitles").change(function () {
            var href = "";
            var title = "";
            $("#ddlExamTitles option:selected").each(function () {
                href += $(this)[0].value;
                title += $(this)[0].textContent
            });
            $("#ExamTitle").val(title)
            $.ajax({
                url: "/Home/GetExamText",
                type: "POST",
                data: { href: href },
                success: function (data) {
                    var examText = $(data).find("p:not(p.related-cne-video-component__dek)")
                    examText.find('a').removeAttr("href");
                    examText.remove("em");
                    $("#ExamTextLabel").html(examText);
                    $("#ExamText").val($("#ExamTextLabel").html().toString());
                }
            });
        });
        $("#ddlExamTitles").change();

        
    });
</script>